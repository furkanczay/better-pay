{
  "name": "better-payment",
  "version": "1.3.0",
  "description": "Unified payment gateway library for Turkish payment providers",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./adapters/next-js": {
      "types": "./dist/adapters/next-js.d.ts",
      "import": "./dist/adapters/next-js.mjs",
      "require": "./dist/adapters/next-js.js"
    },
    "./adapters/node": {
      "types": "./dist/adapters/node.d.ts",
      "import": "./dist/adapters/node.mjs",
      "require": "./dist/adapters/node.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "canary": "tsup examples/iyzico-example.ts --format cjs,esm --dts",
    "test": "vitest",
    "test:unit": "vitest tests/unit",
    "test:integration": "vitest tests/integration",
    "test:e2e": "vitest tests/e2e",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "payment",
    "gateway",
    "iyzico",
    "paytr",
    "turkey",
    "turkish",
    "payment-gateway",
    "typescript",
    "payment-provider",
    "e-commerce",
    "online-payment",
    "3d-secure",
    "nodejs",
    "nextjs"
  ],
  "author": "Better Pay Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/furkanczay/better-payment.git"
  },
  "bugs": {
    "url": "https://github.com/furkanczay/better-payment/issues"
  },
  "homepage": "https://github.com/furkanczay/better-payment#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.22",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^4.0.1",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "next": "15.5.4",
    "prettier": "^3.1.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.1"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
